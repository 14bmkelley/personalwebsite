<div class="container">
  <hr/>
  <div class="col-xs-12">
    <h1 class="title center">Contact Me</h1>
  </div>
  <hr/>
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
    <% if (success) { %>
      <h4 class="bg-success title center">Contact form successfully submitted.</h3>
      <br/>
    <% } %>
    <form class="form-horizontal">
      <div class="form-group">
        <label for="name" class="col-sm-3">Name:</label>
        <div class="col-sm-9">
          <input type="name" class="form-control" id="focus"/>
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-3">Email Address:</label>
        <div class="col-sm-9">
          <input type="email" class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <label for="message" class="col-sm-3">Message:</label>
        <div class="col-sm-9">
          <textarea class="form-control" id="submit" rows="4"></textarea>
        </div>
      </div>
      <div class="col-sm-9 col-sm-offset-3 center">
        <button type="button" class="btn btn-default">Submit</button>
      </div>
    </form>
  </div>
</div>
